    <LinearLayout
        android:id="@+id/LayoutLightButtons"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent" android:layout_weight="1">


        <Button
            android:id="@+id/buttonStartStop"
