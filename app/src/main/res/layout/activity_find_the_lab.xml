<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.projectpizza.FindTheLab">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView3" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Current Location"
                android:layout_gravity="center_horizontal"
                android:id="@+id/currentLocationTitle"
                android:textSize="30sp"
                android:paddingTop="5dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_weight="1"

                        android:text="Latitude"
                        android:id="@+id/textView3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="1"
                        android:layout_gravity="right"
                        android:text="Longitude"
                        android:id="@+id/textView2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textSize="20dp"
                        android:text="Accuracy"
                        android:id="@+id/textView" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textColor="#444444"
                        android:hint="Loading..."
                        android:id="@+id/textLat" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textColor="#444444"

                        android:id="@+id/textLong"
                        android:hint="Loading..."  />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#444444"
                        android:layout_weight="1"
                        android:hint="Loading..."
                        android:id="@+id/accuracyText" />
                </TableRow>
            </TableLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Locations"
                android:textSize="30sp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/locationsTitle" />

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="  "
                        android:layout_weight=".5"
                        android:id="@+id/textView13" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="A"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:id="@+id/textView14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="B"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:id="@+id/textView15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:text="C"
                        android:layout_weight="2"
                        android:id="@+id/textView16" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Lat"
                        android:gravity="center"
                        android:layout_weight=".5"
                        android:id="@+id/textView17" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:hint="not set"
                        android:inputType="numberDecimal|numberSigned"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:id="@+id/latTextA" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:hint="not set"
                        android:layout_weight="2"
                        android:inputType="numberDecimal|numberSigned"
                        android:gravity="center"
                        android:id="@+id/latTextB"  />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:hint="not set"
                        android:layout_weight="2"
                        android:inputType="numberDecimal|numberSigned"
                        android:gravity="center"
                        android:id="@+id/latTextC" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Long"
                        android:gravity="center"
                        android:layout_weight=".5"
                        android:id="@+id/textView18" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:hint="not set"
                        android:inputType="numberDecimal|numberSigned"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:id="@+id/longTextA" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:hint="not set"
                        android:layout_weight="2"
                        android:inputType="numberDecimal|numberSigned"
                        android:gravity="center"
                        android:id="@+id/longTextB"  />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:inputType="numberDecimal|numberSigned"
                        android:hint="not set"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:id="@+id/longTextC" />
                </TableRow>

                <!--<TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="  "
                        android:layout_weight=".5"
                        android:id="@+id/textView19" />

                    <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current"
                    android:layout_weight="2"
                    android:minHeight="1dp"
                    android:textSize="16sp"
                    android:onClick="setCurrent"
                    android:id="@+id/currentA" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current"
                        android:layout_weight="2"
                        android:minHeight="1dp"
                        android:textSize="16sp"
                        android:onClick="setCurrent"
                        android:id="@+id/currentB" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current"
                        android:layout_weight="2"
                        android:minHeight="1dp"
                        android:textSize="16sp"
                        android:onClick="setCurrent"
                        android:id="@+id/currentC" />

                </TableRow>-->

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="  "
                        android:layout_weight=".5"
                        android:id="@+id/textView20" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:layout_weight="2"
                        android:minHeight="1dp"
                        android:textSize="16sp"
                        android:onClick="editLocation"
                        android:id="@+id/editA" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:layout_weight="2"
                        android:minHeight="1dp"
                        android:textSize="16sp"
                        android:onClick="editLocation"
                        android:id="@+id/editB" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:layout_weight="2"
                        android:minHeight="1dp"
                        android:textSize="16sp"
                        android:onClick="editLocation"
                        android:id="@+id/editC" />

                </TableRow>

            </TableLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Find Intersection"
                android:textSize="30sp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/findIntersectionTitle" />


            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="  "
                        android:layout_weight=".5"
                        android:id="@+id/textView21" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="A"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:id="@+id/textView22" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="B"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:id="@+id/textView23" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:text="C"
                        android:layout_weight="2"
                        android:id="@+id/textView24" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Point"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_weight=".5"
                        android:id="@+id/textView25" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="not found"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:id="@+id/pointA" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:hint="not found"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:id="@+id/pointB" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:hint="not found"
                        android:layout_weight="2"
                        android:id="@+id/pointC" />

                    </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Radius"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_weight=".5"
                        android:id="@+id/textView26" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:hint="not set"
                        android:inputType="numberDecimal|numberSigned"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:id="@+id/radiusA" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:hint="not set"
                        android:layout_weight="2"
                        android:inputType="numberDecimal|numberSigned"
                        android:gravity="center"
                        android:id="@+id/radiusB"  />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:hint="not set"
                        android:layout_weight="2"
                        android:inputType="numberDecimal|numberSigned"
                        android:gravity="center"
                        android:id="@+id/radiusC" />
                </TableRow>
            </TableLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Notes"
                android:textSize="30sp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/notesTitle" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/notesBox" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:onClick="saveNotes"
                android:id="@+id/saveNotesButton" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
